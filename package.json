{
  "name": "gas-regulator-mvp",
  "version": "1.0.0",
  "private": true,
  "description": "燃气调压器异常检测AI Agent MVP系统",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "generate:data": "bun run scripts/data-generator.ts",
    "generate:data:anomaly": "bun run scripts/data-generator.ts -p 0.5",
    "generate:data:multi": "bun run scripts/data-generator.ts -d"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "bun@1.0.0",
  "engines": {
    "bun": ">=1.0.0"
  }
}
